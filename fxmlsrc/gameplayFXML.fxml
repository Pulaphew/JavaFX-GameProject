<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768" prefWidth="1360" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    
    <!-- Background Pane -->
    <Pane fx:id="backgroundPane" prefHeight="768" prefWidth="1360">
        <ImageView fx:id="backgroundImage" fitHeight="768" fitWidth="1360" />
    </Pane>
    
    <!-- Player Pane -->
    <Pane fx:id="playerPane" layoutX="77.0" layoutY="301.0" prefHeight="250" prefWidth="262" style="-fx-background-color: lightblue;">
        <ImageView fx:id="playerImage" fitHeight="200" fitWidth="200.0" layoutX="8.0" />
        <Rectangle fx:id="playerHealthBarBackground" fill="red" height="20" layoutY="210" width="262.0" />
        <Rectangle fx:id="playerHealthBar" fill="green" height="20" layoutY="210" width="262.0" />
    </Pane>
    
    <!-- Enemy Pane -->
    <Pane fx:id="enemyPane" layoutX="1000" layoutY="100" prefHeight="250" prefWidth="262" style="-fx-background-color: lightcoral;">
        <ImageView fx:id="enemyImage" fitHeight="200" fitWidth="200" layoutX="54.0" layoutY="4.0" />
        <Rectangle fx:id="enemyHealthBarBackground" fill="red" height="20" layoutY="210" width="262" />
        <Rectangle fx:id="enemyHealthBar" fill="green" height="20" layoutY="210" width="262" />
    </Pane>
    
    <!-- Game Battle Menu -->
    <Pane fx:id="gameBattleMenu" layoutX="-1.0" layoutY="531.0" prefHeight="240.0" prefWidth="1366.0" style="-fx-background-color: lightgray;">
        <Button fx:id="attackButton" alignment="CENTER" layoutX="135.0" layoutY="75.0" prefHeight="80.0" prefWidth="250.0" text="Attack">
         <font>
            <Font size="30.0" />
         </font></Button>
        <Button fx:id="evadeButton" layoutX="583.0" layoutY="75.0" prefHeight="80.0" prefWidth="250.0" text="Evade">
         <font>
            <Font size="30.0" />
         </font></Button>
        <Button fx:id="ultimateButton" layoutX="1005.0" layoutY="77.0" prefHeight="80.0" prefWidth="250.0" text="Ultimate">
         <font>
            <Font size="30.0" />
         </font></Button>
    </Pane>
    
    <!-- Surrender Button -->
    <Pane fx:id="surrenderPane" layoutX="20" layoutY="20" style="-fx-background-color: lightyellow;">
        <Button fx:id="surrenderButton" prefHeight="62.0" prefWidth="182.0" text="Surrender">
         <font>
            <Font size="30.0" />
         </font></Button>
    </Pane>
    
</AnchorPane>
